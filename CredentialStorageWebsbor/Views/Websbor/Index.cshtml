@{
    ViewData["Title"] = "Каталог web-сбора";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="shadow p-3">
            <p>Каталог Web-сбора</p>
            <div class="accordion" id="accordionFilter">
                <div class="accordion-item">
                    <h4 class="accordion-header" id="hedingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Фильтр
                        </button>
                    </h4>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionFilter">
                        <div class="accordion-body">
                            <div class="row mb-2">
                                <div class="col-2">
                                    <input class="form-control" id="searchFullName" placeholder="Полное наименование"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchShortName" placeholder="Краткое наименование"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchOkpo" placeholder="ОКПО"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchOkatoFact" placeholder="ОКАТО факт."></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchOkatoReg" placeholder="ОКАТО рег."></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchOkved" placeholder="ОКВЭД2 факт."></input>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <input class="form-control" id="searchAddress" placeholder="Адрес"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchInn" placeholder="ИНН"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchOgrn" placeholder="ОГРН"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchPhone" placeholder="Телефон"></input>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" id="searchEmail" placeholder="Email"></input>
                                </div>
                                <div class="col-2">
                                    <div class="row">
                                        <div class="col-12">
                                            <button onclick="" class="btn btn-primary" onclick="">Обновить</i></button>
                                            <button onclick="" class="btn btn-primary">Сбросить</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="operations my-3">
                <div class="row">
                    <div class="col-2">
                        <div class="row">
                            <div class="col-2">
                                <button href="#" class="btn btn-primary" title="Выгрузить все записи в Excel"><i class="fas fa-download"></i></button>
                            </div>
                            <div class="col-2">
                                <button href="#" class="btn btn-primary" title="Выгрузить текущие записи в Excel"><i class="fas fa-file-download"></i></button>
                            </div>
                            <div class="col-8">
                                <a asp-action="create" asp-controller="websbor" class="btn btn-primary">Создать запись</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ОКПО</th>
                        <th scope="col">Полное наименование</th>
                        <th scope="col">Краткое наименование</th>
                        <th scope="col">ОКАТО факт</th>
                        <th scope="col">ОКАТО рег</th>
                        <th scope="col">ОКВЭД2 факт</th>
                        <th scope="col">Адрес</th>
                        <th scope="col">ИНН</th>
                        <th scope="col">ОГРН</th>
                        <th scope="col">Телефон</th>
                        <th scope="col">Email</th>
                        <th scope="col">Операции</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>