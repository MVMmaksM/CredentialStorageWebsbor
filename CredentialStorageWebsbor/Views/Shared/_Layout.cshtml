<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CredentialStorageWebsbor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <!--<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>-->
    <!--<link rel="stylesheet" href="~/CredentialStorageWebsbor.styles.css" asp-append-version="true"/>-->
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="top">
        <div class="container-fluid">
            <div class="row">
                <header class="col-12 text-center align-items-center static-top shadow" style="background-color:#497ea6;">
                    <div class="topbar p-3 ">
                        <span class="text-white">Система сбора отчетности</span>
                    </div>
                </header>
            </div>
            <div class="row navbar navbar-light bg-white mb-4 static-top shadow">
                <nav class="col-12">
                    <div class="d-flex justify-content-center">
                        <a class="ms-3" asp-controller="Home" asp-action="Index">Главная</a>
                        <a class="ms-3" asp-controller="Credential" asp-action="Index">Учетные данные респондентов</a>
                        <a class="ms-3" asp-controller="Websbor" asp-action="Index">Каталог Web-сбора</a>
                    </div>
                </nav>
            </div>
        </div>
    </div>  
    <main>
        <div class="container-fluid">   
                @RenderBody()        
        </div>
    </main>
    <footer class="mt-auto p-3" style="background-color:#497ea6;">
        <div class="container">
            <div class="d-flex justify-content-between">
                <span class="text-light">ASP.NET 2023</span>
                <span class="text-light">Test</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
